<%
int silverlightLevel = 0;
bool genOptional = false;
List<string> dbNameList = new List<string>();
foreach (CslaObjectInfo cslaInfo in CurrentUnit.CslaObjects)
{
    if (cslaInfo.Generate)
    {
        if(!dbNameList.Contains(cslaInfo.DbName))
            dbNameList.Add(cslaInfo.DbName);
    }
}
