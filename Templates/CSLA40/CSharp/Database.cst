    <%
}
%>
    /// <summary>Class that provides the connection
    /// strings used by the application.</summary>
    internal static class Database
    {

        #region Database Connections

        <%
foreach (string dbName in dbNameList)
{
        %>/// <summary>Connection string to the <%= dbName %> database.</summary>
        internal static string <%= dbName %>Connection
        {
            get { return ConfigurationManager.ConnectionStrings["<%= dbName %>"].ConnectionString; }
        }

        <%
}
        %>/// <summary>Connection string to the security database.</summary>
