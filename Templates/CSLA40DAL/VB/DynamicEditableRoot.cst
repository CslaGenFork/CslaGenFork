    {
        if (!genOptional)
        {
            Response.Write(Environment.NewLine);
        }
        %>
<!-- #include file="DynamicEditableRoot_DataPortal.asp" -->
<!-- #include file="Events.asp" -->
<%
    }
    %>

    }
