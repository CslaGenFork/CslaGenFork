    if (Info.GenerateFactoryMethods && useChildFactory)
    {
        Response.Write(Environment.NewLine);
        %>
<!-- #include file="DynamicEditableRoot_Factory.asp" -->
<%
    }
    Response.Write(Environment.NewLine);
